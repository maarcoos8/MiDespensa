<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginStart="16dp"
    android:layout_marginEnd="16dp"
    android:layout_marginTop="8dp"
    android:layout_marginBottom="8dp"
    app:cardCornerRadius="12dp"
    app:cardElevation="2dp"
    android:backgroundTint="#FFFFFF">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="16dp"
        android:gravity="center_vertical">

        <!-- Imagen del producto -->
        <ImageView
            android:id="@+id/ivProductoImagen"
            android:layout_width="64dp"
            android:layout_height="64dp"
            android:scaleType="centerCrop"
            android:background="#E0E0E0"
            android:src="@drawable/ic_products"
            android:padding="12dp" />

        <!-- Contenedor de texto (nombre, cantidad y caducidad) -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="8dp">

            <TextView
                android:id="@+id/tvProductoNombre"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Leche Entera"
                android:textSize="16sp"
                android:textStyle="bold"
                android:textColor="#000000" />

            <TextView
                android:id="@+id/tvProductoCantidad"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="1 unidad"
                android:textSize="14sp"
                android:textColor="#666666"
                android:layout_marginTop="4dp" />

            <!-- Indicador de caducidad (solo visible en inventarios) -->
            <LinearLayout
                android:id="@+id/layoutCaducidad"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="8dp"
                android:visibility="gone">

                <View
                    android:id="@+id/viewIndicadorCaducidad"
                    android:layout_width="4dp"
                    android:layout_height="16dp"
                    android:background="#10B981"
                    android:layout_gravity="center_vertical"
                    android:layout_marginEnd="8dp" />

                <TextView
                    android:id="@+id/tvCaducidad"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Caduca en 10 días"
                    android:textSize="13sp"
                    android:textColor="#10B981"
                    android:textStyle="bold" />
            </LinearLayout>
        </LinearLayout>

        <!-- Flecha de navegación -->
        <ImageView
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/ic_arrow_right"
            android:contentDescription="Ver detalle" />

    </LinearLayout>

</androidx.cardview.widget.CardView>

<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingVertical="16dp"
    android:gravity="center"
    android:fitsSystemWindows="true"
    android:background="#FAFAFA"
    tools:context=".MainActivity">

    <!-- Logo y nombre de la aplicaciÃ³n -->
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center"
        android:layout_marginTop="40dp"
        android:layout_marginBottom="40dp">

        <ImageView
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:src="@mipmap/ic_launcher"
            android:layout_marginBottom="16dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="MiDespensa"
            android:textColor="#10B981"
            android:textSize="32sp"
            android:textStyle="bold"
            android:letterSpacing="0.02" />
    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="24dp"
        android:layout_marginBottom="40dp"
        android:gravity="center"
        android:text="Gestiona tu hogar de forma sencilla."
        android:textColor="@android:color/black"
        android:textSize="18sp" />

    <Button
        android:id="@+id/btnVerInventarios"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_marginHorizontal="24dp"
        android:text="  Ver Inventarios"
        android:backgroundTint="#34D399"
        android:drawableLeft="@drawable/ic_inventory_scaled"
        android:drawablePadding="12dp"
        android:textColor="@android:color/black"
        android:textSize="16sp"
        android:textStyle="bold"
        android:paddingStart="24dp"
        android:gravity="start|center_vertical"
        android:layout_marginBottom="16dp"/>

    <Button
        android:id="@+id/btnVerListas"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_marginHorizontal="24dp"
        android:text="  Ver Listas de la Compra"
        android:backgroundTint="#34D399"
        android:drawableLeft="@drawable/ic_shopping_list_scaled"
        android:drawablePadding="12dp"
        android:textColor="@android:color/black"
        android:textSize="16sp"
        android:textStyle="bold"
        android:paddingStart="24dp"
        android:gravity="start|center_vertical"
        android:layout_marginBottom="16dp"/>

    <Button
        android:id="@+id/btnVerProductos"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_marginHorizontal="24dp"
        android:text="  Ver Productos"
        android:backgroundTint="#34D399"
        android:drawableLeft="@drawable/ic_products_scaled"
        android:drawablePadding="12dp"
        android:textColor="@android:color/black"
        android:textSize="16sp"
        android:textStyle="bold"
        android:paddingStart="24dp"
        android:gravity="start|center_vertical"
        android:layout_marginBottom="16dp"/>

    <Button
        android:id="@+id/btnRecordatorio"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_marginHorizontal="24dp"
        android:text="  Recordatorio"
        android:backgroundTint="#FFF3CD"
        android:drawableLeft="@drawable/ic_reminder_scaled"
        android:drawablePadding="12dp"
        android:textColor="@android:color/black"
        android:textSize="16sp"
        android:textStyle="bold"
        android:paddingStart="24dp"
        android:gravity="start|center_vertical"
        android:layout_marginBottom="50dp"/>

    <Button
        android:id="@+id/btnSalir"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="  Salir"
        android:drawableLeft="@drawable/ic_exit_scaled"
        android:drawablePadding="8dp"
        android:textColor="#6B7280"
        android:textSize="16sp"
        android:backgroundTint="@android:color/transparent"
        android:gravity="center_vertical"
        style="?android:attr/borderlessButtonStyle"/>

</LinearLayout>
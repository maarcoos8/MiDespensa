<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:padding="16dp"
    android:background="?attr/selectableItemBackground"
    android:gravity="center_vertical">

    <!-- Imagen del producto -->
    <ImageView
        android:id="@+id/ivProductoImagen"
        android:layout_width="64dp"
        android:layout_height="64dp"
        android:scaleType="centerCrop"
        android:background="#E0E0E0"
        android:src="@drawable/ic_products"
        android:padding="12dp" />

    <!-- Contenedor de texto (nombre y categoría) -->
    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="8dp">

        <TextView
            android:id="@+id/tvProductoNombre"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Leche Entera"
            android:textSize="16sp"
            android:textStyle="bold"
            android:textColor="#000000" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="4dp">

            <ImageView
                android:layout_width="16dp"
                android:layout_height="16dp"
                android:src="@drawable/ic_category"
                android:layout_gravity="center_vertical"
                android:layout_marginEnd="4dp" />

            <TextView
                android:id="@+id/tvProductoCategoria"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Nevera"
                android:textSize="14sp"
                android:textColor="#666666" />
        </LinearLayout>
    </LinearLayout>

    <!-- Flecha de navegación -->
    <ImageView
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:src="@drawable/ic_arrow_right"
        android:contentDescription="Ver detalle" />

</LinearLayout>
